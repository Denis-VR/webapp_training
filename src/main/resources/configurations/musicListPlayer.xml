<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="musicPlayer.properties"/>

    <bean id="Classical"
          class="configuration_train.only_xml.music_player.source.ClassicalMusic">
    </bean>

    <bean id="Rock"
          class="configuration_train.only_xml.music_player.source.RockMusic">
    </bean>

    <bean id="Pop"
          class="configuration_train.only_xml.music_player.source.PopMusic">
    </bean>

    <bean id="musicListPlayer"
          class="configuration_train.only_xml.music_player.source.MusicListPlayer">
        <property name="listMusic">
            <list>
                <ref bean="Classical"/>
                <ref bean="Rock"/>
                <ref bean="Pop"/>
            </list>
        </property>
        <property name="names">
            <list>
                <value>One</value>
                <value>Two</value>
                <value>Three</value>
            </list>
        </property>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>
</beans>